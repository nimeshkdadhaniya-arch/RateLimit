<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ========================= -->
    <!--  Logback Configuration    -->
    <!-- ========================= -->

    <!-- Properties -->
    <property name="LOG_PATH" value="./logs" />
    <property name="APP_NAME" value="spring-app" />
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- ========================= -->
    <!--  Console Appender         -->
    <!-- ========================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Highlight adds colors for levels -->
            <pattern>%highlight(${LOG_PATTERN})</pattern>
        </encoder>
    </appender>

    <!-- ========================= -->
    <!--  Rolling File Appender    -->
    <!-- ========================= -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rotate daily and if file exceeds 10MB -->
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory> <!-- keep 30 days -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ========================= -->
    <!--  Log Levels               -->
    <!-- ========================= -->
    <!-- Spring framework logs -->
    <logger name="org.springframework" level="INFO" />
    <logger name="org.hibernate" level="WARN" />
    <logger name="com.zaxxer.hikari" level="WARN" />

    <!-- Your application package -->
    <logger name="com.example.ratelimit" level="DEBUG" />
    <logger name="com.example.RateLimit" level="DEBUG" />
    <!-- ========================= -->
    <!--  Root Logger              -->
    <!-- ========================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ROLLING" />
    </root>

</configuration>